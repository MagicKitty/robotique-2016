package Camera;

import java.util.Timer;
import java.util.TimerTask;

public class RepetChrono {
	private Timer t;
	static long chrono = 0;
	private String yolo = "yolo";
	
	static void Go_Chrono() { 
		chrono = java.lang.System.currentTimeMillis() ;
	}
	
	public RepetChrono() {
		t = new Timer();
		t.schedule(new MonAction2(), 0, 100);
	}
	
	class MonAction2 extends TimerTask {
		boolean repet = true;
		public void run() {
			if (repet) {
				Go_Chrono();
			} else {
				t.cancel();
				
			}
		}
	}

}
