package Camera;

import java.util.Timer;
import java.util.TimerTask;

public class RepetChrono {
	private Timer t;
	private static long chrono = 0;
	private String yolo = "yolo";
	
	public RepetChrono() {
		t = new Timer();
		t.schedule(new MonAction2(), 0, 1000);
	}
	
	class MonAction2 extends TimerTask {
		boolean repet = true;
		public void run() {
			if (repet) {
//				Cam.refreshChrono();
			} else {
				t.cancel();
				
			}
		}
	}
	
	public String getYolo() {
		return yolo;
	}

}
