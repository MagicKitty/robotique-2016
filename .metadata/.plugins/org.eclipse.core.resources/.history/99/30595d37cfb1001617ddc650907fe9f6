package Camera;

import java.util.Timer;
import java.util.TimerTask;

public class RepetChrono {
	private Timer t;
	private static int seconds = 0;
	
	public RepetChrono() {
		t = new Timer();
		t.schedule(new MonAction2(), 0, 1000);
	}
	
	class MonAction2 extends TimerTask {
		boolean repet = true;
		public void run() {
			if (repet) {
				seconds++;
				Cam.refreshChrono(seconds);
			} else {
				t.cancel();
				
			}
		}
	}
}
