package Camera;

import java.util.Timer;
import java.util.TimerTask;

public class RepetChrono {
	private Timer t;
	private static long chrono = 0;
	private String yolo = "yolo";
	private static Chrono chronometre;
	
	public RepetChrono() {
		t = new Timer();
		chronometre = new Chrono();
		chronometre.start();
		t.schedule(new MonAction2(), 0, 1000);
	}
	
	class MonAction2 extends TimerTask {
		boolean repet = true;
		public void run() {
			if (repet) {
				chronometre.pause();
				Cam.refreshChrono(chronometre);
				chronometre.start();
			} else {
				t.cancel();
				
			}
		}
	}
	
	public String getYolo() {
		return yolo;
	}

}
